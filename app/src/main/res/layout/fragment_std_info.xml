<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.todd.trackitcoach.StdInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tired"
            android:id="@+id/checkBoxTired"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hungry"
            android:id="@+id/checkBoxHungry"
            android:layout_above="@+id/checkBoxTired"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form"
            android:id="@+id/checkBoxForm"
            android:layout_above="@+id/checkBoxHungry"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breathing"
            android:id="@+id/checkBoxBreathing"
            android:layout_above="@+id/checkBoxForm"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_alignBottom="@+id/checkBoxBreathing"
            android:layout_alignParentEnd="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Data"
                android:id="@+id/textViewData"
                android:layout_alignTop="@+id/scrollView2"
                android:layout_alignParentEnd="true" />
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EventName"
            android:id="@+id/textViewEventName"
            android:layout_alignTop="@+id/checkBoxBreathing"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</FrameLayout>
